import java.util.Scanner;

public class BooleanFun {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.print("Enter your age: ");
        int myAge = input.nextInt();

        System.out.println("Current age: " + myAge);

        //convert these into something more complete using if statements
        System.out.println("Can rent a car: " );
        if (myAge>= 16) System.out.println("Yes you can!");
        else System.out.println("Nah");
        System.out.println("Gets a senior discount: " );
        if (myAge>= 65) System.out.println("Yes you can!");
        else System.out.println("Nah");

        System.out.println("Can order from children's menu: ");
        if (myAge <= 12) System.out.println("Yes you can!");
        else System.out.println("Nah");

        int a = myAge + 1;
        System.out.println("On your next birthday out you will be: " + a); //complete this code, don't do math in sout

        //further modification: prompt user for input and then print what they are able to do based on their age
        //and print their age on their next birthday

    }
}
